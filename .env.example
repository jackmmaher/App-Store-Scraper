# App Store Scraper PWA - Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================================================
# Authentication (REQUIRED)
# ============================================================================

# Simple password authentication for the app
# SECURITY: Use a strong password (minimum 16 characters)
# Generate with: openssl rand -base64 24
APP_PASSWORD=your-strong-password-here

# RECOMMENDED: Use bcrypt hash instead of plaintext password
# Generate with: node -e "require('bcryptjs').hash('your-password', 12).then(console.log)"
# APP_PASSWORD_HASH=$2a$12$...hashed-password-here

# Secret for signing session tokens (recommended)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# ============================================================================
# Supabase Configuration (REQUIRED)
# ============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service key for server-side operations (keep secret!)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# AI API Keys (Optional - enables AI features)
# ============================================================================

# Claude API for AI review analysis
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API for DALL-E icon generation
OPENAI_API_KEY=sk-...

# SerpAPI for real Google Trends data
SERPAPI_KEY=your-serpapi-key

# ============================================================================
# Crawl Service Configuration
# ============================================================================

# URL of the crawl service (default: localhost for development)
CRAWL_SERVICE_URL=http://localhost:8000

# API key for crawl service authentication
# Generate with: openssl rand -base64 32
CRAWL_SERVICE_API_KEY=your-crawl-service-secret-key
CRAWL_API_KEY=your-crawl-api-key

# Rate Limits
CRAWL_MAX_CONCURRENT=5
CRAWL_REQUESTS_PER_MINUTE=30
CRAWL_CACHE_TTL_HOURS=24

# Feature Flags
CRAWL_ENABLED=true
CRAWL_REDDIT_ENABLED=true
CRAWL_WEBSITES_ENABLED=true

# ============================================================================
# Cron Job Security
# ============================================================================

# Secret for authenticating cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here
