# App Store Scraper PWA - Environment Variables

# Simple password authentication
APP_PASSWORD=your-secret-password

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
# Service key for server-side operations (crawl caching)
SUPABASE_SERVICE_KEY=eyJ...

# Claude API (optional - enables AI review analysis)
ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# Crawl4AI Deep Integration
# ============================================================================

# Crawl Service Configuration
CRAWL_SERVICE_URL=http://localhost:8000
CRAWL_SERVICE_API_KEY=your-crawl-service-secret-key

# Rate Limits
CRAWL_MAX_CONCURRENT=5
CRAWL_REQUESTS_PER_MINUTE=30
CRAWL_CACHE_TTL_HOURS=24

# Feature Flags
CRAWL_ENABLED=true
CRAWL_REDDIT_ENABLED=true
CRAWL_WEBSITES_ENABLED=true
